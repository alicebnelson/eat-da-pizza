<!DOCTYPE html>
<html>
  <head>
    <!-- Tab Title -->
    <title>Eat da Pizza!</title>
    <!-- Tab Image -->
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Custom Styling -->
    <link rel="stylesheet" href="/assets/css/pizza_style.css">
  </head>
  <body>
  
    <!-- Page Container -->
    <div class="container">
      
      <br>

      <!-- Pizza Image -->
      <center>
        <div class="row">
          <img src="/assets/img/pizza.gif">
        </div>
      </center>

      <!-- Page Title -->
      <center>
        <h1 class="red_font">Eat da Pizza!</h1>
      </center>
      
      <br>
      

      <!-- Pizza Content from index.handlebars -->
      {{{body}}}


      <br><br>

      <!-- Input New Pizza Form -->
      <form action="pizza/create" method="POST"> 
        
        <!-- Text Area Input -->
        <div class="row">
          <!-- Empty Div to help center textarea -->
          <div class="col-md-3"></div> 

          <!-- Pizza Input Box -->
          <div class="form-group col-md-6">
            <center><label for="new_pizza" class="red_font">Request a new pizza and place your order!</label></center>
            <textarea class="form-control" columns="8" rows="4" id="new_pizza" name="pizza_name"></textarea>
          </div>

          <!-- Empty Div to help center textarea -->
          <div class="col-md-3"></div> 
        </div>
      
        <!-- Submit Button -->
        <center>
          <button id="submit-button" type="submit" class="btn btn-danger">Place Order</button>
        </center>

      </form>

      <br>

    </div>

    <!-- Link in jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>


  </body>
</html>